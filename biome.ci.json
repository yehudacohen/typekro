{
  "$schema": "https://biomejs.dev/schemas/2.1.3/schema.json",
  "extends": "./biome.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noNonNullAssertion": "error"
      },
      "suspicious": {
        "noExplicitAny": "error"
      },
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "error"
      }
    }
  },
  "overrides": [
    {
      "include": ["examples/**"],
      "linter": {
        "rules": {
          "style": {
            "noNonNullAssertion": "warn"
          },
          "correctness": {
            "noUnusedImports": "warn"
          }
        }
      }
    },
    {
      "include": ["src/alchemy/**"],
      "linter": {
        "rules": {
          "suspicious": {
            "noExplicitAny": "warn"
          }
        }
      }
    }
  ]
}
